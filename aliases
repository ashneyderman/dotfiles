alias ga='git add .'
alias gf='git diff'
alias gc='git commit -m '
alias gco='git checkout'
alias gl='git log --date=local --graph --decorate=short'
alias gp='git log --date=local -p'
alias glr='git log --pretty=format:"%h%x09%an%x09%ad%x09%s"'
alias gls='git log --date=local --name-status'
alias glo='git log --oneline'
alias g='git'
#alias t='tmux-sessionizer'
